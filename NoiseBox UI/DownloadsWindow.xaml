<Window x:Class="NoiseBox_UI.DownloadsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoiseBox_UI"
        xmlns:userControls="clr-namespace:NoiseBox_UI.View.UserControls"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Downloads" Height="500" Width="500"
        MinHeight="500" MinWidth="500"
        AllowsTransparency="True"
        
        SizeChanged="WindowSizeChanged">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="25"/>
    </WindowChrome.WindowChrome>
    
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#212128"/>
        </Grid.Background>

        <userControls:TitlebarButtons x:Name="TitlebarButtons" Panel.ZIndex="1"/>
    </Grid>
</Window>
