<Window x:Class="NoiseBox_UI.CustomEqualizer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoiseBox_UI"
        xmlns:userControls="clr-namespace:NoiseBox_UI.View.UserControls"
        mc:Ignorable="d"
        
        WindowStyle="None"
        Title="Equalizer" Height="250" Width="500"
        MinHeight="250" MinWidth="500"
        AllowsTransparency="True"
        
        StateChanged="Window_StateChanged"
        Closed="Window_Closed">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="25"/>
    </WindowChrome.WindowChrome>
    
    <Grid Focusable="True">
        <Grid.Background>
            <SolidColorBrush Color="#212128"/>
        </Grid.Background>

        <userControls:TitlebarButtons x:Name="TitlebarButtons" Panel.ZIndex="1"/>

        <Grid Margin="30,30,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Slider
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band1, Mode=TwoWay}" 
                HorizontalAlignment="Center"
                Grid.Column="0"/>

            <Slider
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band2, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="1"/>

            <Slider
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band3, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="2"/>

            <Slider
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band4, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="3"/>

            <Slider
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band5, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="4"/>

            <Slider
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band6, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="5"/>

            <Slider
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band7, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="6"/>

            <Slider
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band8, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="7"/>
        </Grid>
        
    </Grid>
</Window>
