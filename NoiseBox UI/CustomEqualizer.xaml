<Window x:Class="NoiseBox_UI.CustomEqualizer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoiseBox_UI"
        xmlns:userControls="clr-namespace:NoiseBox_UI.View.UserControls"
        mc:Ignorable="d"
        
        WindowStyle="None"
        Title="Equalizer" Height="350" Width="500"
        MinHeight="250" MinWidth="500"
        MaxHeight="500" MaxWidth="700"
        AllowsTransparency="True"
        
        StateChanged="Window_StateChanged">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="25"/>
    </WindowChrome.WindowChrome>
    
    <Grid Focusable="True">
        <Grid.Background>
            <SolidColorBrush Color="#212128"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <userControls:TitlebarButtons x:Name="TitlebarButtons" Panel.ZIndex="1"/>

        <Grid Margin="30,0,30,0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Slider
                Name="Slider1"
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band1, Mode=TwoWay}" 
                HorizontalAlignment="Center"
                Grid.Column="0"/>

            <Slider
                Name="Slider2"
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band2, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="1"/>

            <Slider
                Name="Slider3"
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band3, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="2"/>

            <Slider
                Name="Slider4"
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band4, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="3"/>

            <Slider
                Name="Slider5"
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band5, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="4"/>

            <Slider
                Name="Slider6"
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band6, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="5"/>

            <Slider
                Name="Slider7"
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band7, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="6"/>

            <Slider
                Name="Slider8"
                Maximum="{Binding Maximum, Mode=OneWay}"
                Minimum="{Binding Minimum, Mode=OneWay}"
                Orientation="Vertical"
                Style="{StaticResource MaterialDesignDiscreteSlider}"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding Band8, Mode=TwoWay}"
                HorizontalAlignment="Center"
                Grid.Column="7"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Name="StartStopButton" 
                    Height="30" 
                    Width="100" 
                    Click="StartStopButton_Click" 
                    HorizontalAlignment="Center"
                    Grid.Column="1" >
                <TextBlock Name="StartStopText" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Start" FontFamily="/Fonts/#Montserrat"/>
            </Button>
            
            <Button
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" 
                HorizontalAlignment="Left"
                Height="25"
                Width="25"
                Grid.Column="2"
                Click="ReloadButton_Click">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation From ="0" To="360" Duration="0:0:1"
                  Storyboard.TargetName="RotateAnim"
                  Storyboard.TargetProperty="(RotateTransform.Angle)" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Button.Triggers>


                <Image Source="/Images/Icons/reload.png" Width="15" RenderOptions.BitmapScalingMode ="HighQuality" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <RotateTransform Angle="0" x:Name="RotateAnim"/>
                    </Image.RenderTransform>
                </Image>


            </Button>
        </Grid>

    </Grid>
</Window>
