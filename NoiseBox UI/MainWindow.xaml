<Window x:Class="NoiseBox_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:NoiseBox_UI"
        xmlns:converters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
        xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        xmlns:userControls="clr-namespace:NoiseBox_UI.View.UserControls"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="NoiseBox" Height="720" Width="1280"
        MinHeight="{Binding MainWindowMinHeight}"
        MinWidth="{Binding MainWindowMinWidth}"
        AllowsTransparency="True"
        
        SizeChanged="WindowSizeChanged">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="25"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>

    </Window.Resources>
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#FF0A192F"/>
                <GradientStop Color="Black" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition MinHeight="200"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <userControls:SizeControlWindowButtons x:Name="SizeControlWindowButtons" Grid.Row="0" Panel.ZIndex="1"/>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="290"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <userControls:PlaylistText x:Name="PlaylistTextName" Grid.Row="0" Grid.Column="1"/>
        </Grid>
        
        <Grid Name="MainGridRow1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="290"/>
                <ColumnDefinition MinWidth="300"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <userControls:SongList x:Name="SongList" Grid.Column="1"/>
        </Grid>

        <userControls:BottomControlPanel x:Name="BottomControlPanel" Grid.Row="2"/>
    </Grid>
</Window>
